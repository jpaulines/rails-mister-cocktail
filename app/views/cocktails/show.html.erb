<%= @cocktail.name %>

<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to "ðŸ—‘", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>

<% @cocktail.reviews.each do |review| %>
 <%= review.content %>
