<div class="container">
  <div class="row">

    <h1 class="col-12">My Favorite Cocktails</h1>

    <% @cocktails.each do |cocktail| %>
      <div class="card col-3" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
          <span class="btn btn-outline-primary my-2 my-sm-0 0"><%= link_to "Add a cocktail", new_cocktail_path %></span>
        </div>
      </div>
    <% end %>

  </div>
</div>
